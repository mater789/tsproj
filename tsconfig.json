{
  "compilerOptions": {
    "importHelpers": true,
    "moduleResolution": "node",
    "module": "esNext",
    "target": "es5",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "outDir": "./dist/",
    "baseUrl": "./src/",
    "rootDir": "./src/",
    "lib": [
      "es5",
      "dom",
      "es2015.promise",
      "es2015.collection",
      "es2015.iterable"
    ]
  },
  "exclude": [
    "./node_modules/",
    "./dist/"
  ]
}